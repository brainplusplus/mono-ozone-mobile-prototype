          android:right="0.5dp">
        <shape >
            <solid android:color="#000" />
        </shape>
    </item>

    <!-- draw another block to cut-off the left and right bars -->
    <item android:bottom="8.0dp">
        <shape >
            <solid android:color="#000" />
        </shape>
    </item>
</layer-list>