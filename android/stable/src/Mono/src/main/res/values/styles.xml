<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <!-- Buttons -->
    <style name="Button">
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">4</item>
    </style>

    <style name="PrimaryButton" parent="@style/Button">
        <item name="android:background">@drawable/clickable_button</item>
    </style>

    <style name="SecondaryButton" parent="@style/Button">
        <item name="android:background">@drawable/secondary_clickable_button</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">4</item>
    </style>

    <!-- Text Styles -->
    <style name="GenericText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="LargeText" parent="@style/GenericText">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MediumText" parent="@style/GenericText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SmallText" parent="@style/GenericText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MicroText" parent="@style/GenericText">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- General Styles -->
    <style name="page">
        <item name="android:background">@drawable/app_background</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

    <style name="pageTitle" parent="@style/GenericText">
        <item name="android:textColor">@color/primary4</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="navigationArrow">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">#fff</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/dialog_edit_text</item>
        <item name="android:textColor">#fff</item>
        <item name="android:height">50dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="GenericSpinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@color/primary1</item>
        <item name="android:height">50dp</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="GreenButton">
        <item name="android:background">@drawable/clickable_button</item>
    </style>

    <!-- Page Specific styles -->
    <style name="loginEditText" parent="@style/editText">
        <item name="android:background">@drawable/login_edit_text</item>
    </style>

    <style name="settingsCategoryTitle" parent="@style/MediumText">
        <item name="android:textColor">@color/primary4</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="settingsCategoryDescription" parent="@style/SmallText">
        <item name="android:width">300dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="appsMallPage" parent="page">
        <item name="android:background">@drawable/appsmall_background</item>
    </style>


    <!--Login page styling -->
    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="alert">
        <item name="android:background">@color/primary1</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="SettingsTitle">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LoginSpinner" parent="@GenericSpinner">
        <item name="android:background">@drawable/spinner_background_dark</item>
        <item name="android:popupBackground">#000</item>
        <item name="android:height">50dp</item>
        <item name="android:minHeight">50dp</item>
    </style>


    <!--Used in the swipe indicator -->
    <style name="horizontal_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/primary3</item>
    </style>
    <style name="indicator_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/primary3</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">visible</item>
    </style>

    <!-- Dashboard Swiper -->
    <style name="swiper_style">
        <item name="android:layout_marginRight">20dp</item>
    </style>
</resources>
